<p id="notice"><%= notice %></p>

<h1>Job Applications</h1>

<table>
  <thead>
    <tr>
      <th>Job ID</th>
      <th>Linkedin</th>
      <th>Portfolio</th>
      <th>Additionalinfo</th>
      <th>Gender</th>
      <th>Race</th>
      <th>Veteran</th>
      <th>Disability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_applications.each do |job_application| %>
      <tr>
        <td><%= job_application.job_id %></td>
        <td><%= job_application.linkedin %></td>
        <td><%= job_application.portfolio %></td>
        <td><%= job_application.additionalinfo %></td>
        <td><%= job_application.gender %></td>
        <td><%= job_application.race %></td>
        <td><%= job_application.veteran %></td>
        <td><%= job_application.disability %></td>
        <td><%= link_to 'Show', job_application %></td>
        <td><%= link_to 'Edit', edit_job_application_path(job_application) %></td>
        <td><%= link_to 'Destroy', job_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Application', new_job_application_path %>

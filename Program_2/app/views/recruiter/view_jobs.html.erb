<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
  <tr>
    <th>Description</th>
    <th>Employment</th>
    <th>Responsibilities</th>
    <th>Requirements</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @jobs.each do |job| %>
    <tr>
      <td><%= job.description %></td>
      <td><%= job.employment %></td>
      <td><%= job.responsibilities %></td>
      <td><%= job.requirements %></td>
      <td><%= link_to 'Show', job %></td>
      <td><% if session[:user_id] == job.user.id %>
      <%= link_to 'Edit', (job) %>
      <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %> </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
<%= link_to 'Back', recruiter_url %>
